<div class="container mt-5" style="width: 700px;">
  <%= render 'shared/error', resource: @user %>
  <h2 class="my-3"><%= text %></h2>
  <%= form_with model: @user, id: "new_user" do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= form.label :phone_no, class: "form-label" %>
      <%= form.number_field :phone_no, class: "form-control" %>
    </div>
    
    <div class="mb-4" id="file-field">
      <%= form.label :avatar, class: "form-label" %>
      <%= form.file_field :avatar, direct_upload: true, accept: 'image/png, image/jpeg', class: "form-control" %>
    </div>

    <%= form.submit submit_text, class: "btn btn-success rounded-1" %>
    <%= link_to "Cancel", users_path, class: "btn btn-danger rounded-1 ms-2" %>
  <% end %>
</div>
